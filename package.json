{
    "name": "@lemoncloud/lemon-web-core",
    "version": "1.4.2",
    "description": "Core Web-based Library for signing request at LEMONCLOUD",
    "repository": "lemoncloud-io/lemon-web-core",
    "exports": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "files": [
        "dist"
    ],
    "scripts": {
        "prepare": "husky install",
        "clean": "rm -rf dist",
        "start": "tsc -w",
        "test": "jest --passWithNoTests --updateSnapshot --watchAll",
        "test:coverage": "jest --passWithNoTests --updateSnapshot --coverage",
        "build": "pnpm clean && tsup src/index.ts",
        "prepack": "pnpm build && clean-pkg-json",
        "my-release": "pnpm run build && npm publish",
        "fix:prettier": "prettier \"src/**/*.ts\" --write",
        "fix:lint": "eslint src --ext .ts --fix",
        "typedoc": "npx typedoc --out docs"
    },
    "release": {
        "branches": [
            "main",
            {
                "name": "alpha",
                "prerelease": true
            },
            {
                "name": "beta",
                "prerelease": true
            }
        ],
        "plugins": [
            [
                "@semantic-release/commit-analyzer",
                {
                    "preset": "conventionalcommits",
                    "releaseRules": [
                        {
                            "type": "refactor",
                            "release": "patch"
                        },
                        {
                            "type": "chore",
                            "release": "patch"
                        },
                        {
                            "type": "feat",
                            "release": "patch"
                        },
                        {
                            "scope": "minor",
                            "release": "minor"
                        },
                        {
                            "scope": "major",
                            "release": "major"
                        }
                    ]
                }
            ],
            "@semantic-release/release-notes-generator",
            [
                "@semantic-release/changelog",
                {
                    "changelogFile": "CHANGELOG.md"
                }
            ],
            "@semantic-release/npm",
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "CHANGELOG.md",
                        "package.json"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ],
            "@semantic-release/github"
        ]
    },
    "keywords": [
        "typescript",
        "npm",
        "package",
        "lemoncloud",
        "lemon",
        "eurekacodes",
        "eureka",
        "codes"
    ],
    "author": "Hyungtak Jin",
    "license": "MIT",
    "devDependencies": {
        "@commitlint/cli": "^19.0.3",
        "@commitlint/config-conventional": "^19.0.3",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/commit-analyzer": "^11.1.0",
        "@semantic-release/exec": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^9.2.6",
        "@semantic-release/npm": "^11.0.3",
        "@semantic-release/release-notes-generator": "^12.1.0",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.9.0",
        "@typescript-eslint/eslint-plugin": "^6.2.0",
        "@typescript-eslint/parser": "^6.2.0",
        "clean-pkg-json": "^1.2.0",
        "conventional-changelog-conventionalcommits": "^8.0.0",
        "conventional-commits-parser": "^6.0.0",
        "eslint": "^8.45.0",
        "eslint-plugin-unused-imports": "^3.0.0",
        "husky": "^8.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^13.2.3",
        "prettier": "^3.0.0",
        "semantic-release": "^23.1.1",
        "ts-jest": "^29.1.1",
        "tsup": "^7.1.0",
        "typedoc": "^0.25.13",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "aws-sdk": "^2.1630.0",
        "axios": "^1.7.2",
        "crypto-js": "^4.2.0",
        "jwt-decode": "^4.0.0"
    },
    "peerDependencies": {
        "aws-sdk": "^2.1630.0",
        "axios": "^1.7.2",
        "crypto-js": "^4.2.0"
    }
}
